{
  "manifest_version": 3,
  "name": "Sokker Sumskill",
  "version": "1.0.1",
  "description": "Displays sumskill information in Sokker Manager online game",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sokker-addon@example.com",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "action": {
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.sokker.org/*"
      ],
      "js": [
        "sokkerSumskill.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "*://*.sokker.org/*"
  ]
}