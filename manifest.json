{
  "manifest_version": 2,
  "name": "Sokker Sumskill",
  "version": "1.0",

  "description": "Displays sumskill information in Sokker",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.sokker.org/*"],
      "js": ["sokkerSumskill.js"],
      "css": ["styles.css"],

      "run_at": "document_idle"
    }
  ]
}